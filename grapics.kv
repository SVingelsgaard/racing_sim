WindowManager:
    StartScreen:
    MainScreen:

<StartScreen>:  
    Label:
        pos: 0, -100
        text: "press to start"

    Button:
        size: root.size
        opacity: 0
        on_release:
            root.manager.transition.duration = '0'#fyfy
            app.root.current = "mainScreen"
            app.runApp()

<MainScreen>:
    name: "mainScreen"
    Simulator:
        id: sim
        Image:
            source: 'track.png'
        #creating canvas
            canvas:
                Color:
                    rgba: 0, 0, 1, 1    # Blue
        
                # size and position of Canvas
                Rectangle:
                    pos: 100,100
                    size: 64 , 10#self.parent.METER, self.parent.METER
        Car:
            id: car
            source: 'car.png'
            size_hint: None, None
            size: self.xSize, self.ySize
            pos: (self.xPos - self.xSize/2), (self.yPos - self.ySize/2)
            canvas.before:
                PushMatrix:
                Rotate:
                    angle: self.angle
                    origin: self.center
            canvas.after:
                PopMatrix: